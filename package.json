{
  "name": "growi-vivliostylecli-server",
  "version": "0.1.0",
  "description": "HTTP service that runs Vivliostyle CLI jobs for GROWI plugin requests.",
  "private": true,
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "proxy": "tsx src/proxyServer.ts",
    "proxy:start": "node dist/proxyServer.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "pm2:setup": "node ./scripts/pm2/setup.mjs"
    ,"update": "bash ./scripts/update"
  },
  "dependencies": {
    "@vivliostyle/cli": "latest",
    "express": "^4.19.2",
    "http-proxy": "^1.18.1",
    "multer": "^1.4.5-lts.1",
    "p-queue": "^8.0.1",
    "unzipper": "^0.11.5",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/http-proxy": "^1.17.15",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.8.4",
    "rimraf": "^5.0.10",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^1.5.2"
  },
  "engines": {
    "node": ">=18.18"
  }
}

# サーバ設定
PORT=4781
VIV_QUEUE_CONCURRENCY=2
VIV_WORKSPACE_DIR=./jobs
VIV_MAX_ARCHIVE_SIZE_MB=500
VIV_CLI_TIMEOUT_MS=600000
VIV_AUTOCLEANUP_TIMEOUT_MS=900000
VIV_FRONTEND_PING_URL=
VIV_FRONTEND_PING_TIMEOUT_MS=3000

# リバースプロキシ設定
VIV_PROXY_TARGET=http://127.0.0.1:4781
GROWI_TARGET=http://127.0.0.1:3000
VIV_PROXY_PORT=4871
VIV_PROXY_HOST=0.0.0.0

# カスタムルーティング設定
# カスタムルーティング全体の ON/OFF
VIV_CUSTOM_ROUTING_ENABLED=false

# Keycloak ルーティング
# Keycloak へのルーティングを有効にする場合は true に設定
VIV_KEYCLOAK_ROUTING_ENABLED=false
# Keycloak サーバのターゲット URL
VIV_KEYCLOAK_TARGET=http://127.0.0.1:8080
# Keycloak へルーティングするパス（このパスで始まるリクエストが Keycloak へ）
VIV_KEYCLOAK_PATH=/auth

# 使用例:
# Keycloak を有効にする場合:
# VIV_CUSTOM_ROUTING_ENABLED=true
# VIV_KEYCLOAK_ROUTING_ENABLED=true
# VIV_KEYCLOAK_TARGET=http://keycloak:8080
# VIV_KEYCLOAK_PATH=/auth
